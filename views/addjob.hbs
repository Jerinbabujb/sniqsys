<form action="admin.hbs" method="post">
  <div class="mb-md-5 mt-md-4 pb-5">
    <h2 class="fw-bold mb-2 text-uppercase">Add New Job</h2>
    <p class="text-white-50 mb-5">Please enter the new job</p>

    <div class="form-outline form-white mb-4">
      <textarea id="title" name="title" class="form-control form-control-lg"></textarea>
      <label class="form-label">Title</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="place" name="place" class="form-control form-control-lg"></textarea>
      <label class="form-label">Place</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="time" name="time" class="form-control form-control-lg"></textarea>
      <label class="form-label">Time</label>
    </div>

    <!-- Repeat the same pattern for other multiline input fields -->
    <div class="form-outline form-white mb-4">
      <textarea id="experience" name="experience" class="form-control form-control-lg"></textarea>
      <label class="form-label">experience</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="workhours" name="workhours" class="form-control form-control-lg"></textarea>
      <label class="form-label">work hours</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="description" name="description" class="form-control form-control-lg"></textarea>
      <label class="form-label">Description</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="responsibilities" name="responsibilities" class="form-control form-control-lg"></textarea>
      <label class="form-label">Responsibilities</label>
    </div>

    <div class="form-outline form-white mb-4">
      <textarea id="qualification" name="qualification" class="form-control form-control-lg"></textarea>
      <label class="form-label">Qualification</label>
    </div>

    <button class="btn btn-outline-primary btn-lg px-5" type="submit" id="loginpage">Add</button>
  </div>
</form>
